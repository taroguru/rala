<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mediastore_fragment_by_artist_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:srcCompat="@color/player_background"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/mediastore_header"
        android:padding="0dp" >
        <!-- filename
        <TextView
            android:id="@+id/txtIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:padding="0dp"
            android:textSize="16sp"
            android:color="@color/text_playitem"
            android:text="Index"
            android:layout_centerVertical="true"
            />-->
        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="72dp"
            android:layout_centerVertical="true"
            android:padding="0dp"
            android:textSize="16sp"
            android:text="@string/Album"
            android:color="@color/text_playitem"
            />
        <TextView
            android:id="@+id/txtTrackCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_centerHorizontal="true"
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:padding="0dp"
            android:textSize="16sp"
            android:color="@color/text_playitem"
            android:text="Track"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/albumlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mediastore_header"
        android:layout_above="@+id/mediastore_footer"

        />

</RelativeLayout>