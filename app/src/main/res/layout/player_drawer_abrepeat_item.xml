<?xml version="1.0" encoding="utf-8"?>
<!-- android:background="@drawable/file_list_selector" -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:id="@+id/playlist_item"
    style="@style/HeaderItem">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mediastore_arrayitem_audio"
        android:padding="0dp" >
        <!-- filename -->
        <TextView
            android:id="@+id/txtIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:padding="0dp"
            android:textSize="16sp"
            android:color="@color/text_playitem"
            android:text="1"
            android:layout_centerVertical="true"
            style="@style/ItemIndexFont"
            />
        <!-- 플레이 중 표시 -->
        <ImageView
            android:id="@+id/imgPlaying"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="32dp"
            android:padding="0dp"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_volume_up_black_24dp"
            />

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerVertical="true"
            android:layout_marginLeft="64dp"
            android:layout_marginRight="100dp"
            android:padding="0dp"
            android:textSize="16sp"
            android:text="Part1 longlonglonglong"
            android:ellipsize="end"
            android:color="@color/text_playitem"
            style="@style/ItemTitleFont"
            />
        <!-- android:layout_marginTop="6dp" -->
        <TextView
            android:id="@+id/txtArtist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="64dp"
            android:layout_marginRight="100dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txtName"
            android:layout_alignParentRight="true"
            android:padding="0dp"
            android:textSize="10sp"
            android:color="@color/button_grey"
            android:text="123"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/txtDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="32dp"
            android:layout_alignParentRight="true"
            android:padding="0dp"
            android:textSize="16sp"
            android:text="12:12"
            android:color="@color/button_grey"
            android:layout_centerVertical="true"
            style="@style/ItemTimeFont"
            />
    <RelativeLayout
        android:id="@+id/imgMoreButtonClickArea"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_marginRight="0dp"
        android:layout_alignParentRight="true"
        >
        <ImageView
        android:id="@+id/imgMoreButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginRight="4dp"
        android:layout_alignParentRight="true"
        android:padding="0dp"
        app:srcCompat="@drawable/ic_more_vert_black_24dp"
        android:layout_centerVertical="true"
        />
        </RelativeLayout>

    </RelativeLayout>
    <!-- filename -->

</androidx.cardview.widget.CardView>
