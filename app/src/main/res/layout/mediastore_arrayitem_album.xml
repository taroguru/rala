<?xml version="1.0" encoding="utf-8"?>
<!-- android:background="@drawable/file_list_selector" -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:id="@+id/playlist_item"
    android:padding="0dp" >
    <!-- filename -->
    <TextView
        android:id="@+id/txtIndex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:padding="0dp"
        android:textSize="16sp"
        android:color="@color/text_playitem"
        android:text="1"
        android:layout_centerVertical="true"
        />
    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="100dp"
        android:layout_centerVertical="true"
        android:padding="0dp"
        android:textSize="16sp"
        android:text="part1 longlonglonglonglonglonglonglong"
        android:ellipsize="end"
        android:color="@color/text_playitem"
        />
    <TextView
        android:id="@+id/txtTrackCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="32dp"
        android:layout_centerHorizontal="true"
        android:gravity="right"
        android:layout_alignParentRight="true"
        android:padding="0dp"
        android:textSize="16sp"
        android:color="@color/text_playitem"
        android:text="123"
        android:layout_centerVertical="true"
        />
</RelativeLayout>
