<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ChildItem"
    android:id="@+id/mediastore_arrayitem_audiofile">
    android:id="@+id/mediastore_arrayitem_audiofile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp">

        <ImageView
            android:id="@+id/imgAlbum"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0dp" />

        <TextView
            android:id="@+id/txtTitle"
            style="@style/ItemTitleFont"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_above="@id/txtArtist"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="76dp"
            android:gravity="center_vertical"
            android:padding="0dp"
            android:text="Title Title title titLe 12_34" />

        <TextView
            android:id="@+id/txtArtist"
            style="@style/ItemSecondLineFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="76dp"
            android:padding="0dp"
            android:text="Artist name" />

        <TextView
            android:id="@+id/txtDuration"
            style="@style/ItemTimeFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="32dp"
            android:gravity="right"
            android:padding="0dp"
            android:text="12:34" />

        <androidx.cardview.widget.CardView
            android:id="@+id/imgMoreButtonClickArea"
            style="@style/clickableArea"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgMoreButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="4dp"
                    android:padding="0dp"
                    app:srcCompat="@drawable/ic_more_vert_black_24dp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</androidx.cardview.widget.CardView>